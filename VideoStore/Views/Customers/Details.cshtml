@model VideoStore.Models.Customers

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    <li>Birthdate: @Model.BirthDate.ToShortDateString()</li>
    <li>Number of Movies Rented: @Model.NumberOfMoviesRented</li>
    <li>Movies Rented:  </li>
    @foreach(var movie in Model.Rental)
    {
        <li>@movie.Movies.Name</li>
    }
</ul>
